<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_weight="1.0"
        android:background="@color/events_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/events_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/events_padding_right"
            android:layout_marginTop="@dimen/events_heading_margin_top"
            android:textColor="@color/white"
            android:gravity="end"
            android:text="events"
            android:textSize="@dimen/events_heading_font_size" />

        <View
            android:layout_width="@dimen/events_line_width"
            android:layout_height="@dimen/line_thickness"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/events_line_padding_top"
            android:background="@android:color/white" />


        <ListView
            android:id="@+id/events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/events_events_list_margin_top"
            android:background="@color/events_color"
            android:divider="#00000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:orientation="vertical">

        <ListView
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/events_categories_margin_top"
            android:layout_gravity="left"
            android:background="@color/white"
            android:divider="#00000000" />
    </LinearLayout>
</LinearLayout>