<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nvanbenschoten.motion.ParallaxImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_bg"
            android:src="@drawable/holi_bg"
            android:scaleType="fitXY"/>
        <com.nvanbenschoten.motion.ParallaxImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/ragam_logo_w"/>

    </FrameLayout>

    <SlidingDrawer
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingdrawer_height"
        android:id="@+id/slidingDrawer"
        android:content="@+id/content2"
        android:handle="@+id/handle2"
        android:orientation="vertical"
        android:rotation="180">
        <RelativeLayout
            android:layout_width="@dimen/dropdown_item_width"
            android:layout_height="@dimen/dropdown_item_height"
            android:background="@color/dropdown_bg"
            android:id="@+id/handle2">
                <Button
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:id="@+id/pullup_button"
                    android:background="@drawable/pullup"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"

                    />
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content2"
            android:rotation="180"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                >
                <View
                    android:layout_width="@dimen/dropdown_item_width"
                    android:layout_height="@dimen/dropdown_item_start"
                    android:background="@color/dropdown_bg"/>
                <TextView
                    android:layout_width="@dimen/dropdown_item_width"
                    android:layout_height="@dimen/dropdown_item_height"
                    android:id="@+id/dropdown_tv1"
                    android:background="@color/dropdown_bg"
                    android:text="competitions"
                    android:textSize="30dp"
                    android:onClick="pageSelected"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"/>
                <View
                    android:layout_width="@dimen/dropdown_seperator_width"
                    android:layout_height="@dimen/dropdown_seperator_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/dropdown_seperator"/>
                <TextView
                    android:layout_width="@dimen/dropdown_item_width"
                    android:layout_height="@dimen/dropdown_item_height"
                    android:background="@color/dropdown_bg"
                    android:id="@+id/dropdown_tv2"
                    android:text="workshops"
                    android:textSize="30dp"
                    android:clickable="true"
                    android:onClick="pageSelected"
                    android:gravity="center_horizontal|center_vertical"/>
                <View
                    android:layout_width="@dimen/dropdown_seperator_width"
                    android:layout_height="@dimen/dropdown_seperator_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/dropdown_seperator"/>

                <TextView
                    android:layout_width="@dimen/dropdown_item_width"
                    android:layout_height="@dimen/dropdown_item_height"
                    android:background="@color/dropdown_bg"
                    android:id="@+id/dropdown_tv3"
                    android:text="celebrity talks"
                    android:textSize="30dp"
                    android:clickable="true"
                    android:onClick="pageSelected"
                    android:gravity="center_horizontal|center_vertical"/>
                <View
                    android:layout_width="@dimen/dropdown_seperator_width"
                    android:layout_height="@dimen/dropdown_seperator_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/dropdown_seperator"/>
                <TextView
                    android:layout_width="@dimen/dropdown_item_width"
                    android:layout_height="@dimen/dropdown_item_height"
                    android:background="@color/dropdown_bg"
                    android:id="@+id/dropdown_tv4"
                    android:text="pro shows"
                    android:textSize="30dp"
                    android:clickable="true"
                    android:onClick="pageSelected"
                    android:gravity="center_horizontal|center_vertical"/>
                <View
                    android:layout_width="@dimen/dropdown_seperator_width"
                    android:layout_height="@dimen/dropdown_seperator_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/dropdown_seperator"/>
                <TextView
                    android:layout_width="@dimen/dropdown_item_width"
                    android:layout_height="@dimen/dropdown_item_height"
                    android:background="@color/dropdown_bg"
                    android:id="@+id/dropdown_tv5"
                    android:text="gallery"
                    android:textSize="30dp"
                    android:clickable="true"
                    android:onClick="pageSelected"
                    android:gravity="center_horizontal|center_vertical"/>
                <View
                    android:layout_width="@dimen/dropdown_seperator_width"
                    android:layout_height="@dimen/dropdown_seperator_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/dropdown_seperator"/>
                <TextView
                    android:layout_width="@dimen/dropdown_item_width"
                    android:layout_height="@dimen/dropdown_item_height"
                    android:background="@color/dropdown_bg"
                    android:id="@+id/dropdown_tv6"
                    android:text="about us"
                    android:textSize="30dp"
                    android:clickable="true"
                    android:onClick="pageSelected"
                    android:gravity="center_horizontal"/>
                </LinearLayout>
        </RelativeLayout>
        </SlidingDrawer>




</RelativeLayout>
