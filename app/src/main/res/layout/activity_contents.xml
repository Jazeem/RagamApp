<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <com.viewpagerindicator.LinePageIndicator
            android:id="@+id/titles"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_width="fill_parent" />

        <com.jfeinstein.jazzyviewpager.JazzyViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/home_button"
        android:onClick="homePressed"
        android:layout_gravity="top|left"
        android:layout_marginLeft="@dimen/home_button_margin_left"
        android:layout_marginTop="@dimen/home_button_margin_top"
        android:layout_width="@dimen/back_button_height"
        android:background="@drawable/home_button_selector"
        android:layout_height="@dimen/back_button_height" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/prompter"
        android:background="#dcffffff">
        <ImageView
            android:layout_width="@dimen/swipe_width"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/swipe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/swipe_margin_top"
            />


    </RelativeLayout>
</FrameLayout>
